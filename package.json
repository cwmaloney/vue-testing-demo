    "vue-hot-reload-api": "^2.3.0",
    "vue-jest": "^2.6.0",
    "vue-loader": "^15.2.4",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
